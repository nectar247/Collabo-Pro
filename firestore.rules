rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Homepage Cache - Public read access for performance
    match /homepageCache/{document=**} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }

    // Deals - Public read, admin write
    match /deals_fresh/{dealId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // Categories - Public read, admin write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // Brands - Public read, admin write
    match /brands/{brandId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // Search History - Public read/write (for analytics)
    match /search_history/{searchId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // User Profiles - User can read/write their own, admins can read all
    match /profiles/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true);
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Settings - Public read, admin write
    match /settings/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // Dynamic Links - Public read, admin write
    match /dynamicLinks/{linkId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // FAQs - Public read, admin write
    match /faqs/{faqId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // Blog Posts - Public read, admin write
    match /blog_posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // Media Files - Public read, admin write
    match /media_files/{fileId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // About Content - Public read, admin write
    match /about/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.isAdmin == true;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
